# Database
DATABASE_URL="postgresql://healthcare_user:healthcare_pass@localhost:5432/healthcare_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_REFRESH_EXPIRES_IN="7d"

# Google Meet API
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/google/callback"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Twilio SMS
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# App Configuration
PORT=3001
NODE_ENV="development"
API_VERSION="v1"
API_PREFIX="api"

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=1800000
PASSWORD_RESET_EXPIRY=900000
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
SESSION_EXPIRY=604800000
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128

# Seed Configuration (Development Only)
SEED_DEFAULT_PASSWORD="TempPass123!"
SEED_DOCTOR_PASSWORD="DocPass123!"
SEED_PATIENT_PASSWORD="PatPass123!"

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"